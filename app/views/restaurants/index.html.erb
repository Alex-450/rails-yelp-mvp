<div class="container m-4">
  <div class="row text-center">
    <div class="col">
      <h1>Restaurants</h1>
    </div>
  </div>
  <div class="row d-flex mb-4 text-center">
    <div class="col"><%= link_to 'Add restaurant', new_restaurant_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 mb-3">
        <div class="card">
          <div class="card-body text-center">
            <h3 class="card-title"><%= restaurant.name %></h3>
            <p class="card-subtitle mb-3 mt-3"><%= restaurant.address %></p>
            <%= link_to "See details", restaurant_path(restaurant), class: 'btn btn-secondary' %>
          </div>

          <div class="card-footer text-center text-muted"><%= restaurant.category %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
