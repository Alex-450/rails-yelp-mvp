<div class="container">
  <h1>Restaurants</h1>
  <div class="row">
    <%= link_to 'Add restaurant', new_restaurant_path, class: 'btn btn-primary' %>
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 mb-3">
        <div class="card">
          <div class="card-body text-center">
            <h3 class="card-title"><%= restaurant.name %></h3>
            <p class="card-subtitle"><%= restaurant.address %></p>
            <%= link_to "See details", restaurant_path(restaurant), class: 'btn btn-secondary' %>
          </div>

          <div class="card-footer text-center text-muted"><%= restaurant.category %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
